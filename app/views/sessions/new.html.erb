<h1>ログイン</h1>
<div class='container'>
    <div class="form-group">
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email,class:'form-control' %>
      <%= f.label :password %>
      <%= f.password_field :password,class:'form-control' %>
      <%= f.submit "ログイン" ,class:'btn btn-default'%>
    <% end %>
    </div>

    <%= link_to "新しいアカウントの作成", new_user_path,class:"btn btn-primary btn-sm" %>
</div>
